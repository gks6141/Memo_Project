<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.mapper.PostMapper">
 	<select id="selectPost" resultType="Map">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 	</select>
 	
 	<select id="getPostListByUserId" resultType="com.memo.post.domain.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId`= #{userId}
 		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectPostByUserIdPostId" parameterType="map" resultType="com.memo.post.domain.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId`= #{userId} And `id` = #{postId}
 	</select>
 	
 	
 	<insert id ="insertPostByUserId" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{subject}
 			,#{content}
 			,#{imagePath}
 			,NOW()
 			,NOW()
 			
 		)
 	</insert>
 	<update id="updatePostByPostId" parameterType="map">
 	UPDATE `post`
 	SET
		`subject` = #{subject}
		,`content` = #{content}
		<if test="imagePath != null">
		,`imagePath` = #{imagePath}
		</if>
		,`updatedAt` = NOW()
	WHERE
		`id` = #{postId}
 	</update>
 	
 	<delete id="deletePostByPostId" parameterType="map">
 	DELETE FROM `post`
 	WHERE
 		`id` = #{postId} AND `userId` = #{userId}
 	</delete>
 </mapper>