<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.mapper.PostMapper">
 	<select id="selectPost" resultType="Map">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 	</select>
 	
 	<select id="getPostListByUserId" resultType="com.memo.post.domain.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId`= #{userId}
 		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectPostByUserIdPostId" parameterType="map" resultType="com.memo.post.domain.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId`= #{userId} And `id` = #{postId}
 	</select>
 	
 	
 	<insert id ="insertPostByUserId" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{subject}
 			,#{content}
 			,#{imagePath}
 			,NOW()
 			,NOW()
 			
 		)
 			
 	</insert>
 </mapper>